<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_head"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:background="@drawable/main_head"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/main_head_shape01"
            android:layout_width="247dp"
            android:layout_height="113dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-67dp"
            android:background="@drawable/main_background_shape1" />

        <ImageView
            android:id="@+id/main_head_shape02"
            android:layout_width="146dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/main_background_shape2" />

        <ImageView
            android:id="@+id/profile_back_button"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/profile_back_button"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profile_back_button"
            android:layout_marginStart="10dp"
            android:layout_marginTop="45dp"
            android:gravity="top"
            android:text="@string/me"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:textAppearance="@style/joti_one_regular" />

    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/profile_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <RelativeLayout
            android:id="@+id/profile_scroll_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:src="@drawable/main1_rectangle"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:clipToOutline="true" />

            <TextView
                android:id="@+id/profile_username_txt"
                android:layout_width="92dp"
                android:layout_height="41dp"
                android:layout_below="@+id/profile_picture"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="@string/huang"
                android:textAppearance="@style/anek_gurmukhi_medium"
                android:textSize="32sp"

                android:gravity="top"
                />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>